<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <name>Xill Processor</name>
    <description>The backend implementation of the Xill Processor</description>

    <parent>
        <groupId>nl.xillio.xill</groupId>
        <artifactId>xill-parent</artifactId>
        <version>3.6.32</version>
        <relativePath>../xill-parent</relativePath>
    </parent>

    <artifactId>xill-processor</artifactId>

    <dependencies>
        <dependency>
            <groupId>nl.xillio.xill</groupId>
            <artifactId>xill-api</artifactId>
        </dependency>
        <dependency>
            <groupId>com.google.code.gson</groupId>
            <artifactId>gson</artifactId>
        </dependency>
        <dependency>
            <groupId>nl.xillio.xill</groupId>
            <artifactId>xill.lang.Xill</artifactId>
            <exclusions>
                <exclusion>
                    <groupId>log4j</groupId>
                    <artifactId>log4j</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>commons-codec</groupId>
            <artifactId>commons-codec</artifactId>
        </dependency>
        <!-- Xill Plugins -->
        <dependency>
            <groupId>nl.xillio.xill</groupId>
            <artifactId>plugin-document</artifactId>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>nl.xillio.xill</groupId>
            <artifactId>plugin-excel</artifactId>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>nl.xillio.xill</groupId>
            <artifactId>plugin-exiftool</artifactId>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>nl.xillio.xill</groupId>
            <artifactId>plugin-mariadb</artifactId>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>nl.xillio.xill</groupId>
            <artifactId>plugin-mssql</artifactId>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>nl.xillio.xill</groupId>
            <artifactId>plugin-mysql</artifactId>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>nl.xillio.xill</groupId>
            <artifactId>plugin-oracle</artifactId>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>nl.xillio.xill</groupId>
            <artifactId>plugin-postgres</artifactId>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>nl.xillio.xill</groupId>
            <artifactId>plugin-properties</artifactId>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>nl.xillio.xill</groupId>
            <artifactId>plugin-sqlite</artifactId>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>nl.xillio.xill</groupId>
            <artifactId>plugin-template</artifactId>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>nl.xillio.xill</groupId>
            <artifactId>plugin-web</artifactId>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>nl.xillio.xill</groupId>
            <artifactId>plugin-xml</artifactId>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>nl.xillio.xill</groupId>
            <artifactId>plugin-xurl</artifactId>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-1.2-api</artifactId>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>nl.xillio.xill</groupId>
            <artifactId>xill-testutils</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>de.flapdoodle.embed</groupId>
            <artifactId>de.flapdoodle.embed.mongo</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>mysql</groupId>
            <artifactId>mysql-connector-java</artifactId>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>jul-to-slf4j</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>eu.somatik.serviceloader-maven-plugin</groupId>
                <artifactId>serviceloader-maven-plugin</artifactId>
            </plugin>
        </plugins>
    </build>

</project>
